<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora!"
        android:textSize="30dp"
        android:layout_marginLeft="100dp"
        />

    <EditText
        android:id="@+id/edtValor1"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@+id/calculadora"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="Valor 1" />
    /** VALOR DOIS **/

    <EditText
        android:id="@+id/edtValor2"
        android:layout_below="@+id/edtValor1"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:hint="Valor 2"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnSomar"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtValor2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="Somar"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSubtrair"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnSomar"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="subtrair"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_below="@id/btnSubtrair"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:hint="multiplicar"
        android:textSize="20dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnMultiplicar"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="dividir"
        android:textSize="20dp" />

</RelativeLayout>